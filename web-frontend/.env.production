# BATbern Frontend - Production Environment
# Production deployment configuration (batbern.ch)

# ============================================================================
# API Configuration
# ============================================================================

# API Gateway URL (production)
VITE_API_BASE_URL=https://api.batbern.ch/api/v1

# ============================================================================
# AWS Cognito Configuration
# ============================================================================

# AWS Region
VITE_AWS_REGION=eu-central-1

# Cognito User Pool ID (production)
VITE_COGNITO_USER_POOL_ID=eu-central-1_PRODUCTION_POOL

# Cognito App Client ID (production)
VITE_COGNITO_CLIENT_ID=PRODUCTION_CLIENT_ID

# Cognito Domain (for hosted UI, if needed)
VITE_COGNITO_DOMAIN=batbern.auth.eu-central-1.amazoncognito.com

# ============================================================================
# Application Configuration
# ============================================================================

# Application environment
VITE_APP_ENV=production

# Application version
VITE_APP_VERSION=1.0.0

# Disable debug mode in production
VITE_DEBUG=false

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable features for production
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_PWA=true

# ============================================================================
# External Services
# ============================================================================

# Sentry DSN for error logging
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/production

# Google Analytics ID
VITE_GA_TRACKING_ID=
