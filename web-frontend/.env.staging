# BATbern Frontend - Staging Environment
# Staging deployment configuration (dev.batbern.ch)

# ============================================================================
# API Configuration
# ============================================================================

# API Gateway URL (staging)
VITE_API_BASE_URL=https://api-dev.batbern.ch/api/v1

# ============================================================================
# AWS Cognito Configuration
# ============================================================================

# AWS Region
VITE_AWS_REGION=eu-central-1

# Cognito User Pool ID (staging)
VITE_COGNITO_USER_POOL_ID=eu-central-1_STAGING_POOL

# Cognito App Client ID (staging)
VITE_COGNITO_CLIENT_ID=STAGING_CLIENT_ID

# Cognito Domain (for hosted UI, if needed)
VITE_COGNITO_DOMAIN=batbern-staging.auth.eu-central-1.amazoncognito.com

# ============================================================================
# Application Configuration
# ============================================================================

# Application environment
VITE_APP_ENV=staging

# Application version
VITE_APP_VERSION=1.0.0-staging

# Enable debug mode (reduced in staging)
VITE_DEBUG=false

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable features for staging
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_PWA=true

# ============================================================================
# External Services
# ============================================================================

# Sentry DSN for error logging
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/staging

# Google Analytics ID
VITE_GA_TRACKING_ID=
