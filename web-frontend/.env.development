# BATbern Frontend - Development Environment
# Local development configuration

# ============================================================================
# API Configuration
# ============================================================================

# API Gateway URL (local development)
VITE_API_BASE_URL=http://localhost:8080/api/v1

# ============================================================================
# AWS Cognito Configuration
# ============================================================================

# AWS Region
VITE_AWS_REGION=eu-central-1

# Cognito User Pool ID (development)
VITE_COGNITO_USER_POOL_ID=eu-central-1_XXXXXXXXX

# Cognito App Client ID (development)
VITE_COGNITO_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX

# Cognito Domain (for hosted UI, if needed)
VITE_COGNITO_DOMAIN=batbern-dev.auth.eu-central-1.amazoncognito.com

# ============================================================================
# Application Configuration
# ============================================================================

# Application environment
VITE_APP_ENV=development

# Application version
VITE_APP_VERSION=1.0.0-dev

# Enable debug mode
VITE_DEBUG=true

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable features for development
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_PWA=false

# ============================================================================
# External Services
# ============================================================================

# Sentry DSN for error logging (optional)
VITE_SENTRY_DSN=

# Google Analytics ID (optional)
VITE_GA_TRACKING_ID=
