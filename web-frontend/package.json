{
  "name": "@batbern/web-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "lint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "lint:ci": "eslint src --report-unused-disable-directives --max-warnings 50",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "generate:api-types": "openapi-typescript ../docs/api/companies-api.openapi.yml -o src/types/generated/company-api.types.ts"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^6.0.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.908.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.2",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "@tanstack/react-query": "^5.90.2",
    "aws-amplify": "^6.0.0",
    "axios": "^1.6.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.0",
    "i18next": "^25.5.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.65.0",
    "react-i18next": "^16.0.0",
    "react-router-dom": "^7.9.3",
    "recharts": "^3.2.1",
    "web-vitals": "^5.1.0",
    "workbox-window": "^7.3.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.4.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.0",
    "lint-staged": "^16.2.4",
    "msw": "^2.11.5",
    "openapi-typescript": "^7.10.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run --passWithNoTests"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "test-exclude": "^7.0.1"
  },
  "_comment_overrides": "Force test-exclude@7+ to eliminate deprecated glob@7.2.3/inflight@1.0.6. workbox-build still uses old glob - waiting for upstream update",
  "_comment_build": "Build verified 2025-10-08 - TypeScript compilation successful"
}
