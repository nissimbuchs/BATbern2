#!/bin/bash

# BATbern Platform - Pre-commit Hook
# Enforces TDD practices by running tests for changed files

set -e

echo "üß™ Running pre-commit tests for changed files..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

if [ -z "$STAGED_FILES" ]; then
    echo "No files staged for commit"
    exit 0
fi

# Check for TypeScript/JavaScript changes
TS_FILES=$(echo "$STAGED_FILES" | grep -E '\.(ts|tsx|js|jsx)$' || true)
JAVA_FILES=$(echo "$STAGED_FILES" | grep -E '\.java$' || true)

# Track if any tests failed
TESTS_FAILED=0

# Run frontend checks if TypeScript/JavaScript files changed
if [ -n "$TS_FILES" ]; then
    echo -e "${YELLOW}üì¶ Frontend files changed, running checks...${NC}"

    # Use lint-staged for efficient frontend checks
    if [ -d "web-frontend" ] && [ -f "web-frontend/package.json" ]; then
        cd web-frontend

        # Filter for frontend files only and strip web-frontend/ prefix
        FRONTEND_FILES=$(echo "$STAGED_FILES" | grep '^web-frontend/' | sed 's|^web-frontend/||')

        if [ -n "$FRONTEND_FILES" ]; then
            # Run ESLint on changed frontend files (exclude config and env files)
            echo "  Running ESLint..."
            LINT_FILES=$(echo "$FRONTEND_FILES" | grep -v -E '\.(eslintrc|prettierignore)' | grep -v '\.env' || true)
            if [ -n "$LINT_FILES" ]; then
                echo "$LINT_FILES" | xargs npx eslint --max-warnings 0 || TESTS_FAILED=1
            fi

            # Run Prettier check on changed frontend files (exclude config and env files)
            echo "  Running Prettier..."
            PRETTIER_FILES=$(echo "$FRONTEND_FILES" | grep -v -E '\.(eslintrc|prettierignore|eslintignore)' | grep -v '\.env' || true)
            if [ -n "$PRETTIER_FILES" ]; then
                echo "$PRETTIER_FILES" | xargs npx prettier --check || TESTS_FAILED=1
            fi
        fi
        cd ..
    elif [ -f "package.json" ]; then
        # Fallback for non-monorepo structure
        npx eslint $TS_FILES --max-warnings 0 || TESTS_FAILED=1
        npx prettier --check $TS_FILES || TESTS_FAILED=1
    fi
fi

# Run backend checks if Java files changed
if [ -n "$JAVA_FILES" ]; then
    echo -e "${YELLOW}‚òï Java files changed, running checks...${NC}"

    # Run Checkstyle for changed files
    if [ -f "gradlew" ]; then
        echo "  Running Checkstyle..."
        ./gradlew checkstyleMain checkstyleTest || TESTS_FAILED=1
    fi
fi


# Final check
if [ $TESTS_FAILED -ne 0 ]; then
    echo -e "${RED}‚ùå Pre-commit checks failed!${NC}"
    echo -e "${RED}Please fix the issues above before committing.${NC}"
    echo ""
    echo "To bypass this check (NOT recommended), use:"
    echo "  git commit --no-verify"
    exit 1
fi

echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
exit 0