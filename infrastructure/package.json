{
  "name": "batbern-infrastructure",
  "version": "1.0.0",
  "description": "Infrastructure as Code for BATbern Platform",
  "bin": {
    "infrastructure": "bin/infrastructure.js",
    "batbern-infrastructure": "bin/batbern-infrastructure.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "cdk": "cdk",
    "synth": "cdk synth",
    "synth:dev": "AWS_PROFILE=batbern-dev cdk synth --context environment=development",
    "synth:staging": "AWS_PROFILE=batbern-staging cdk synth --context environment=staging",
    "synth:prod": "AWS_PROFILE=batbern-prod cdk synth --context environment=production",
    "deploy": "cdk deploy",
    "deploy:dev": "AWS_PROFILE=batbern-dev cdk deploy --all --context environment=development --require-approval never",
    "deploy:staging": "AWS_PROFILE=batbern-staging cdk deploy --all --context environment=staging --require-approval never",
    "deploy:prod": "AWS_PROFILE=batbern-prod cdk deploy --all --context environment=production --require-approval broadening",
    "destroy": "cdk destroy",
    "destroy:dev": "AWS_PROFILE=batbern-dev cdk destroy --all --context environment=development",
    "destroy:staging": "AWS_PROFILE=batbern-staging cdk destroy --all --context environment=staging",
    "destroy:prod": "AWS_PROFILE=batbern-prod cdk destroy --all --context environment=production",
    "diff": "cdk diff",
    "diff:dev": "AWS_PROFILE=batbern-dev cdk diff --all --context environment=development",
    "diff:staging": "AWS_PROFILE=batbern-staging cdk diff --all --context environment=staging",
    "diff:prod": "AWS_PROFILE=batbern-prod cdk diff --all --context environment=production"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudwatch": "^3.901.0",
    "@aws-sdk/client-lambda": "^3.901.0",
    "@aws-sdk/client-sns": "^3.901.0",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "aws-cdk": "^2.110.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.110.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testTimeout": 30000
  }
}
