# Development Dockerfile with hot reload support for event-management-service
FROM gradle:8.5-jdk21

WORKDIR /workspace

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy Gradle wrapper and settings
COPY settings.gradle ./
COPY gradle ./gradle
COPY gradlew ./

# Copy shared-kernel dependency
COPY shared-kernel/build.gradle ./shared-kernel/
COPY shared-kernel/src ./shared-kernel/src

# Copy service build file
COPY services/event-management-service/build.gradle ./services/event-management-service/

# Download dependencies (cached layer)
RUN gradle :services:event-management-service:dependencies --no-daemon || true

# Copy source code
COPY services/event-management-service/src ./services/event-management-service/src

WORKDIR /workspace/services/event-management-service

# Set unique Gradle user home to avoid cache conflicts
ENV GRADLE_USER_HOME=/workspace/services/event-management-service/.gradle

# Expose application port and debug port
EXPOSE 8080
EXPOSE 5005

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080/actuator/health || exit 1

# Run with Gradle bootRun for hot reload
# Use project-specific task to avoid multi-project conflicts
ENTRYPOINT ["gradle", ":services:event-management-service:bootRun", "--no-daemon"]
